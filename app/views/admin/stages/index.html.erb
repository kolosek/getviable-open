<table class="table table-striped table-bordered table-condensed">
  <thead>
    <tr>
      <th>Order</th>
      <th>Title</th>
      <th>Description</th>
      <th>Icon</th>
      <th>Color</th>
      <th>Image</th>
      <th>Actions</th>
    </tr>
  </thead>
  <% @stages.each do |stage| %>
    <tr>
      <td><%= stage.order %></td>
      <td><%= stage.title %></td>
      <th><%= stage.description %></th>
      <th><%= image_tag stage.icon.url(:medium) %></th>
      <th><%= stage.color %></th>
      <th><%= stage.image %></th>
      <th><%= link_to "edit", edit_admin_stage_path(stage), :class => "btn" %></th>
    </tr>
  <% end %>
</table>
<%= link_to "New Stage", new_admin_stage_path, :class => "btn" %>
