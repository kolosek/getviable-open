<%= simple_form_for [:admin, @stage], :html => { :multipart => true } do |f|%>
  <div class="span4">
    <%= f.label :order %>
    <%= f.number_field :order %>
    <%= f.label :title %>
    <%= f.text_field :title %>
    <%= f.label :description %>
    <%= f.text_field :description %>
    <%= f.label :image %>
    <%= f.text_field :image %>
    <%= f.label :color %>
    <%= f.text_field :color %>
    <%= f.label :icon %>
    <%= f.file_field :icon %>
    <%= f.submit %>
  </div>
<% end %>
