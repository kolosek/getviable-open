<% if @question %>
  <h3><%= link_to "<-", admin_survey_section_questions_path(@question.survey_section) %> Question:</h3>
  <%= @question.text%>
<% end %>

<h4>Answers</h4>

<%= link_to "New Answer", new_admin_question_answer_path(@question), :class => "btn" if @question %>

<table class="sortable table table-striped table-bordered table-condensed">
  <thead>
    <tr>
      <th><%= "# Id" %></th>
      <th><%= glyph(:tasks, :white)+"Text" %></th>
      <th><i class="icon-pencil icon-white"></i>Edit</th>
    </tr>
  </thead>
  <tbody>
    <% @answers.each do |answer| %>
      <tr class="answer">
        <!-- TODO: Don't show link_to action if nothing to edit beneath -->
        <td class="bold"><%= answer.id %></td>
        <td><%= answer.text %></td>
        <td class="grey">
          <%= link_to 'Edit', edit_admin_answer_path(answer), :class => "btn" %>
          <%= link_to 'Delete', admin_answer_path(answer), :class => "btn", :method => :delete, :confirm => "Are you sure?" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>